<Page x:Class="FinalProject1.SalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProject1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalesPage">

    <Grid Background="#FFF1F1F1">
        <Button x:Name="MainMenu" Content="Main Menu" HorizontalAlignment="Left" Margin="691,415,0,0" VerticalAlignment="Top" Width="99" FontSize="16" Click="MainMenu_Click" ClickMode="Press"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="497,415,0,0" VerticalAlignment="Top" Width="99" FontSize="16" Click="Cancel_Click" ClickMode="Press"/>
        <Button x:Name="Pay" Content="Pay" HorizontalAlignment="Left" Margin="200,415,0,0" VerticalAlignment="Top" Width="99" FontSize="16" Click="Pay_Click" ClickMode="Press"/>
        <TextBox x:Name="PayTotal" HorizontalAlignment="Left" Height="23" Margin="81,415,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="114"/>
        <Label Content="Total = $" HorizontalAlignment="Left" Margin="27,412,0,0" VerticalAlignment="Top" Width="61"/>

    </Grid>
</Page>
