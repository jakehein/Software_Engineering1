<UserControl x:Class="FinalProject1.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProject1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFF1F1F1">
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="255,235,0,0" VerticalAlignment="Top" Height="31" Width="312" FontSize="16"/>
        <Label x:Name="PasswordLabel" Content="Password:" HorizontalAlignment="Left" Margin="255,202,0,0" VerticalAlignment="Top" Width="312" FontSize="16" Height="33"/>
        <Label x:Name="UsernameLabel" Content="Username:" HorizontalAlignment="Left" Margin="255,129,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Left" Height="31" Margin="255,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="312" FontSize="16"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="361,292,0,0" VerticalAlignment="Top" Width="78" FontSize="16" Click="LoginButton_Click" Height="33" ClickMode="Press"/>
    </Grid>
</UserControl>
